        </div>

        <div class="nav-item px-3">
            @foreach (var categoria in L_Categorias)
            {
                <NavLink class="nav-link" href="@categoria.Url">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> @categoria.NombreCategoria
